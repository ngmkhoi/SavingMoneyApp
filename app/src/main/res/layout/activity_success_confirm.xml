<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient_main"
    tools:context=".ui.SuccessConfirmActivity">

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_check_circle" />

    <TextView
        android:id="@+id/tvGdichTcong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="GIAO DỊCH THÀNH CÔNG" />

    <TextView
        android:id="@+id/tvTienTcong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="#7bac4d"
        android:textStyle="bold"
        android:text="3,000,000 VND" />

    <TextView
        android:id="@+id/tvthoigian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#596b74"
        android:text="16:53 Thứ Ba 04/01/2022" />
    <View
        android:layout_marginTop="22dp"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#2e3c46" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvStkTk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tài khoản tiết kiệm"
            android:textColor="#596b74"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tvShowtkTkiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="0000000000"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#2e3c46" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#2e3c46" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvMaGdich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã giao dịch"
            android:textColor="#596b74"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tvShowMaGdich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="11111111"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#2e3c46" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGdichMoi"
        android:layout_width="380dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttn_border"
        android:text="Thực hiện giao dịch mới"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

</LinearLayout>